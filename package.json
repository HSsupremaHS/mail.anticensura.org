{
  "name": "anticensura-email-system",
  "version": "1.0.0",
  "description": "Sistema di gestione email per @anticensura.org",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "imap": "^0.8.19",
    "mysql2": "^3.6.3",
    "sequelize": "^6.33.0",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2",
    "mailparser": "^3.7.1"
  },
  "keywords": ["email", "anticensura", "webmail", "smtp", "imap"],
  "author": "AntiCensura Team",
  "license": "MIT"
}